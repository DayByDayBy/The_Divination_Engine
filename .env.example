# Database connection string - use host.docker.internal for Docker on Mac/Windows, localhost for native
# Example: jdbc:postgresql://localhost:5432/divination (keep secret)
DB_URL=jdbc:postgresql://host.docker.internal:5432/divination

# PostgreSQL username - from your database setup (keep secret)
DB_USERNAME=your_username

# PostgreSQL password - from your database setup (keep secret)
DB_PASSWORD=your_password

# JDBC driver class - usually org.postgresql.Driver for PostgreSQL
DB_DRIVER=org.postgresql.Driver

# Spring profile - use 'dev' for development, 'prod' for production
SPRING_PROFILE=dev

# Backend server port - default 8080, change if port conflicts
SERVER_PORT=8080

# Frontend API URL - http://localhost:8080/api for native, http://backend:8080/api for Docker
VITE_API_URL=http://localhost:8080/api
